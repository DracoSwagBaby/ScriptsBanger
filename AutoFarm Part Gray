local function runProximityPromptAtLocation(position)
    local noStealPots = workspace:FindFirstChild("No-Steal Pots")
    if not noStealPots then
        warn("No-Steal Pots folder not found in Workspace")
        return
    end

    for _, child in ipairs(noStealPots:GetChildren()) do
        local cookPart = child:FindFirstChild("CookPart")
        if cookPart and cookPart:IsA("BasePart") then
            local proximityPrompt = cookPart:FindFirstChild("ProximityPrompt")
            if proximityPrompt and proximityPrompt:IsA("ProximityPrompt") then
                for _ = 1, 10 do
                    if not isRunning then return end
                    proximityPrompt:InputHoldBegin()
                    wait(0.1)
                    proximityPrompt:InputHoldEnd()
                end
            else
                warn("ProximityPrompt not found in CookPart of " .. child.Name)
            end
        else
            warn("CookPart not found or is not a BasePart in " .. child.Name)
        end
    end
end
